{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2023"],
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "rootDirs": ["."],
    "outDir": "./build",
    "paths": {
      "@/*": ["src/*"]
    },
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "plugins": [
      { 
        "transform": "typescript-transform-paths"
      },
      { 
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  },
  "include": ["."],
  "exclude": []
}
